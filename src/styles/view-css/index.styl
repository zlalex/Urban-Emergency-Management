.Urban-Emergency-Management, .ue-default-layout, .ue-map-wrap, .ue-login,{
	width: 100%;
	height: 100%;
	font-size: 12px;
}

.ue-index-topbar {
	width: 100%;
}

.ue-layout-left, .ue-layout-right, .ue-layout-center, .ue-index-topbar, .ue-index-operate{
	position: absolute;
	z-index: 2;
}

.ue-layout-left {
	left: 0;
	top: 60px;
	height: calc(100% - 60px);
	overflow-y: scroll;
}

.ue-layout-right {
	right: 0;
	top: 60px;
	height: calc(100% - 60px);
	overflow-y: scroll;
}

.ue-layout-center {
	top: 80px;
	left: 0;
	right: 0;
	margin: auto;
	width: 240px;
}

.ue-index-section {
	padding: 10px;
	margin: 10px;
	max-width: 500px;
	font-size: 14px;
	color: #fff;
	background: rgba(0, 102, 153, 0.6);
	border: 1px solid #006699;
}

.ue-index-imgwrap {
	overflow: auto;
	display: flex;
	img {
		flex: 1;
		min-width: 100px;
		height: 100px;
		margin-right: 5px;
	}
}

.ue-index-operate{
	left: 0;
	right: 0;
	bottom: 20px;
	margin: auto;
	width: 500px;
	span {
		margin-right: 10px;
		&:last-child{
			margin-right: 0;
		}
	}
}