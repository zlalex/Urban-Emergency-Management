.Urban-Emergency-Management, .ue-default-layout, .ue-map-wrap, .ue-login, .ue-index {
	width: 100%;
	height: 100%;
}

.ue-index-topbar {
	width: 100%;
}

.ue-index-left, .ue-index-right, .ue-index-center, .ue-index-topbar, .ue-index-operate{
	position: absolute;
	z-index: 2;
}

.ue-index-left {
	left: 0;
	top: 60px;
	height: calc(100% - 60px);
	overflow-y: scroll;
}

.ue-index-right {
	right: 0;
	top: 60px;
}

.ue-index-center {
	top: 80px;
	left: 0;
	right: 0;
	margin: auto;
	width: 240px;

	.ue-search-form {
		input {
			float: left;
			width: 200px;
			height: 32px;
			border: 1px solid #e1e1e1;
			border-radius: 4px 0 0 4px;
			border-right: 0 none;
			line-height: 30px;
			font-size: 14px;
			text-indent: 10px;
			background: #fff;
		}

		span {
			float: left;
			width: 32px;
			height: 32px;
			line-height: 30px;
			background: #fff;
			border-radius: 0 4px 4px 0;
			border: 1px solid #e1e1e1;
			cursor: pointer;
			user-select: none;
			&:active{
				background: #eee;
			}
		}
	}
}

.ue-index-section {
	padding: 10px;
	margin: 15px;
	max-width: 400px;
	font-size: 18px;
	color: #fff;
	background: rgba(0, 102, 153, 0.4);
	border: 1px solid #006699;
}

.ue-index-imgwrap {
	overflow: scroll;

	img {
		width: 100px;
		height: 100px;
		float: left;
		margin-right: 5px;
	}
}

.ue-index-operate{
	left: 0;
	right: 0;
	bottom: 20px;
	margin: auto;
	width: 500px;
	span {
		margin-right: 10px;
		&:last-child{
			margin-right: 0;
		}
	}
}