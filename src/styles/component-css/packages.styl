.ue-radio--button {
	.ue-button--radio {
		float: left;
		padding: 0 20px;
		margin-left: -1px;
		min-width: 100px;
		height: 36px;
		font-size: 14px;
		text-align: center;
		line-height: 36px;
		background-color: #ffffff;
		border-width: 1px;
		border-color: #e1e3e6;
		border-style: solid;
		cursor: pointer;

		&.active {
			position: relative;
			z-index: 1;
			color: #ffffff;
			background: #2693ff;
			border-color: #2693ff;
		}

		&:first-child {
			margin-left: 0px;
			border-radius: 4px 0px 0px 0px;
		}

		&:last-child {
			border-radius: 0px 4px 0px 0px;
		}
	}
}

$blue = #2693ff;
$hoverBlue = #198bfc;
$linkColor = $blue;

.ue-button {
	display: inline-block;
	padding: 0 15px;
	height: 36px;
	font-size: 14px;
	line-height: 34px;
	color: #333;
	text-align: center;
	border-radius: 4px;
	border: 1px solid transparent;
	background-color: transparent;
	user-select: none;
	transition: all 0.3s;
	cursor: pointer;

	&:hover {
		transition: all 0.3s;
	}

	&.ue-btn-default {
		color: #ffffff;
		background-color: $linkColor;
		border-color: $linkColor;

		&:hover {
			background-color: $hoverBlue;
			border-color: $hoverBlue;
		}
		&:active{
			background-color: #006699;
		}
	}

	&.ue-btn-large {
		width: 100%;
	}
}

.ue-form-item {
	overflow: hidden;

	.ue-form-label {
		float: left;
		width: 50px;
		text-align: right;
		font-size: 14px;
		line-height: 28px;

		&+input {
			float: left;
			margin-left: 10px;
			width: 140px;
			text-indent: 10px;
			font-size: 14px;
			line-height: 26px;
			border: 1px solid #e1e1e1;
		}
	}
}